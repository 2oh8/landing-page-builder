/** Stylus Styles */
@import '../../node_modules/vuetify/src/stylus/main'

.title{
  text-align: center;
  font-family: 'Oswald';
  font-weight: 100;
  font-size: 3.75rem;
  letter-spacing:5px;
  background: linear-gradient(rgba(255,0,0,0), #444,rgba(255,0,0,0));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 0;
  @media screen and (min-width:37.5em){
    font-size: 4.75rem;
  }
}
p{
  margin:0 auto 2rem;
  text-align: center;
  font-family: 'oswald';
  font-size: 1.25rem;
  color:#444;
  font-weight: 100;
  width: 90%;
  @media screen and (min-width:37.5em){
    height: 70%;
  }
  
}
.info-card-gallery{
  margin-top:50px;
  width: auto;
  height: auto;
  margin: 30px auto;
  max-width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  flex:1 1 auto;
}
.info-card {
  position: relative;
  display:block;
  width: 250px !important;
  height: 350px;
  margin:0 5% 2rem;
	background-size:cover;
  border-radius:10px;
  box-shadow:0px 25px 50px rgba(0,0,0,.5);
  overflow:hidden;
  transition:all .4s ease;
  @media screen and (min-width:37.5em){
    height: 300px;
  }
  @media screen and (min-width:45em) {
    display:inline-block;
  	width: 45%;
    margin-left: 25px;
  }
}
.info-card__img {
    width: 75%;
    margin-left: 5%;
    margin-top: 25% !important;
    display:block;
    margin:0 auto;
}

.info-card .home-img {
   background: url('./assets/topography.png');
   -webkit-background-clip: text;
   -webkit-text-fill-color: transparent;
   transform: rotate(-20deg);
   font-size: 20rem;
   width: 150%;
   margin-left: -10%;
   margin-top: -5%;
}

.info-card__overlay {
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  z-index:5;
  &:after {
    content:'';
    width: 100%;
    border-radius:10px;
    height: 100%;
    background-color: #202020;
    opacity:0;
    position: absolute;
    top:0;
    z-index:-10;
    left:0;
    transition:all .3s ease;
  }
}
  .info-dialog {
    z-index: 999 !important;
  }
  .info-card__title {
    position: relative;
    top:-200px;
    margin-bottom:.5rem;
    margin-top:4rem;
    font-size: 2.25rem;
    font-family: 'Cinzel';
    font-weight: 100;
    color:white;
    text-align: center;
    letter-spacing:5px;
    transition:all .3s cubic-bezier(.3, 0, 0, 1.3);
  }
  
  .info-card__subcontent {
    position: relative;
    display:block;
    width:60%;
    top:250px;
    padding:10px;
    margin: 0 auto;
    font-family: 'Raleway';
    color:white;
    letter-spacing:3px;
    text-decoration: none;
    text-align: center;
    border:2px solid white;
    border-radius:3px;
    font-size: 1.25em;
    transition:all .3s cubic-bezier(.3, 0, 0, 1.3);
    &:hover {
      background-color: white;
      color:#202020 !important;
    }
  }

  .info-card__subcontent-skills {
    position: relative;
    display:block;
    width:60%;
    top:250px;
    padding:10px;
    margin: 0 auto;
    font-family: 'Raleway';
    color:white;
    letter-spacing:3px;
    text-decoration: none;
    text-align: center;
    font-size: 1.25em;
    transition:all .3s cubic-bezier(.3, 0, 0, 1.3);
    }



.info-card:hover {
  
  .info-card__title{
    top:0;
  }
  .info-card__subcontent{
    top:0;
  }
  .info-card__subcontent-skills{
    top:0;
  }
  .info-card__overlay:after{
    opacity:.75;
  } 
}

